{
  "name": "slack-hooker",
  "version": "0.2.0",
  "description": "General hub for Slack incoming and outgoing hooks",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lfilho/slack-hooker"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "node index",
    "watch": "nodemon -q -w lib/ --exec 'npm run test'",
    "dev": "npm run watch -s && npm start",
    "container:build": "docker build --rm -t slack-hooker-container .",
    "container:run": "docker run --name slack-hooker --restart always -p 5000:5000 -d slack-hooker-container npm start",
    "container:stop": "docker stop slack-hooker",
    "container:clean": "npm run container:stop -s && docker rm slack-hooker",
    "container:restart": "docker restart slack-hooker",
    "container:rebuild-and-restart": "npm run container:clean -s && npm run container:build && npm run container:start",
    "test": "npm run lint -s && buster-test",
    "test:watch": "npm run lint -s && buster-autotest"
  },
  "keywords": [
    "slack",
    "docker",
    "chatops"
  ],
  "author": "Luiz Gonzaga dos Santos Filho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfilho/slack-hooker/issues"
  },
  "homepage": "https://github.com/lfilho/slack-hooker",
  "dependencies": {
    "array.prototype.find": "^1.0.0",
    "body-parser": "^1.12.0",
    "dotenv": "^0.5.1",
    "express": "^4.12.2",
    "moment": "^2.10.3",
    "node-slack": "git+https://github.com/xoxco/node-slack.git",
    "object-keys": "^1.0.3"
  },
  "engines": {
    "node": "0.10.x"
  },
  "devDependencies": {
    "babel": "^5.4.2",
    "babel-eslint": "^3.1.1",
    "buster": "^0.7.18",
    "eslint": "^0.21.1",
    "nodemon": "^1.3.7",
    "request": "^2.56.0",
    "rewire": "^2.3.3",
    "supertest": "^0.15.0"
  }
}
