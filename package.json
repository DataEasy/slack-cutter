{
  "name": "slack-hooker",
  "version": "0.2.0",
  "description": "General hub for Slack incoming and outgoing hooks",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lfilho/slack-hooker"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "babel-node index",
    "watch": "nodemon -q -w lib/ --exec 'npm run test'",
    "dev": "npm run watch -s && npm start",
    "container:build": "docker build --rm -t slack-hooker-container .",
    "container:run": "docker run --name slack-hooker --restart always -p 5000:5000 -d slack-hooker-container npm start",
    "container:stop": "docker stop slack-hooker",
    "container:clean": "npm run container:stop -s && docker rm slack-hooker",
    "container:restart": "docker restart slack-hooker",
    "container:rebuild-and-restart": "npm run container:clean -s && npm run container:build && npm run container:run",
    "test": "npm run lint && npm run coverage",
    "test:watch": "npm test -- -w",
    "posttest": "istanbul check-coverage --statements 90 --branches 90 --functions 90 --lines 90",
    "coverage": "istanbul cover --print both ./node_modules/mocha/bin/_mocha -- test --recursive --compilers js:babel/register",
    "codeclimate": "CODECLIMATE_REPO_TOKEN=2dfacbf20f6196807d77967d4f8be4399057dbab3e6285362cdef1675dc1ba88 codeclimate-test-reporter < coverage/lcov.info"
  },
  "keywords": [
    "slack",
    "docker",
    "chatops"
  ],
  "author": "Luiz Gonzaga dos Santos Filho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfilho/slack-hooker/issues"
  },
  "homepage": "https://github.com/lfilho/slack-hooker",
  "dependencies": {
    "array.prototype.find": "^1.0.0",
    "body-parser": "^1.12.0",
    "dotenv": "1.2.0",
    "express": "^4.12.2",
    "moment": "^2.10.3",
    "node-slack": "git+https://github.com/xoxco/node-slack.git"
  },
  "engines": {
    "node": "0.12.x"
  },
  "devDependencies": {
    "babel": "^5.4.2",
    "babel-eslint": "^3.1.1",
    "chai": "^3.0.0",
    "codeclimate-test-reporter": "^0.1.0",
    "eslint": "^0.24.1",
    "istanbul": "^0.3.17",
    "mocha": "^2.2.5",
    "nodemon": "^1.3.7",
    "proxyquire": "^1.5.0",
    "request": "^2.56.0",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0",
    "supertest": "1.0.1"
  }
}
